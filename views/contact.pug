extends base.pug

block scripts
    script
      include ../static/script.js

block style
    style
      include ../static/style.css
      include ../static/styleContact.css

block content 
    div#container
        h1 Contact Us
        form(action="/contact", method="post", class="myForm") 
            input(type="text", name="name", class="myInput", placeholder="Enter Your Name")
            input(type="phone", name="phone", class="myInput", placeholder="Enter Your Phone")
            input(type="email", name="email", class="myInput", placeholder="Enter Your Email")
            input(type="text", name="address", class="myInput", placeholder="Enter Your Adsress")
            textarea(name="desc", cols="30", rows="10", class="myInput", placeholder="Enter Your Concern")
            button(class="btn") Submit